<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/branco</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="MyButtonAzul" parent="MyButton">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="MyButtonVermelho" parent="MyButton">
        <item name="colorControlHighlight">@color/colorRedDark</item>
        <item name="colorButtonNormal">@color/colorRedNormal</item>
    </style>

    <style name="MyButtonVerde" parent="MyButton">
        <item name="colorControlHighlight">@color/colorGreenDark</item>
        <item name="colorButtonNormal">@color/colorGreenNormal</item>
    </style>

</resources>
